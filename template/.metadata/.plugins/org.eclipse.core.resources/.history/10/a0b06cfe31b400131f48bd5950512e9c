class {{{{name}}}}_delete:

    @user_login
    def GET(self, xid):
        assert (str(xid).isdigit())
        cond = {}
        cond['id'] = int(xid)
        if not check (xid):
            print 'try to delete an unauthrithm data, %s record id:%s , user id:%s'  %  ({{{{name}}}},xid, get_user())
            raise web.notfound()
        m_{{{{name}}}}.delete_one (**cond)
        return web.seeOther('{{{{url}}}}')
        





